<h1>注文履歴詳細</h1>

<div>
  <%#= link_to , admin_root_path(@orders.id) %>
  <td>購入者：<%= @order.customer.last_name + @order.customer.first_name  %></td>
  <td>注文日：<%= @order.created_at %></td>
  <td>配送先：<%= @order.shipping_postal_code + @order.shipping_address %></td>
  <td>支払方法：<%= @order.payment_method_i18n %></td>
</div>

<h2>注文内容</h2>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.product_purchase_price %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.product_purchase_price*order_detail.quantity  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
    
  <h1>商品合計：<%= @order.total_billing_amount %></h1>
  <h1>送料：<%= @order.postage %></h1>
  <h1>請求合計金額：<%= @order.total_billing_amount + @order.postage %></h1>
</div>