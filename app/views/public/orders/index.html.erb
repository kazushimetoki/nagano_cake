<h1>注文履歴一覧</h1>
 <table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
  <% total = 0 %>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.shipping_postal_code + order.shipping_address %></td>
    <td><%= order.order_details.name %></td>
    <td><%= order.total_billing_amount %></td>
    <td><%= link_to '表示する', order_path(order) %></td>
  </tr>
  <% end %>
  <%= paginate @orders %>
  </tbody>
 </toble>
  