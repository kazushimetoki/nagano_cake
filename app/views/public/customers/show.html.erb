<h1>マイページ</h1>

<div>
  <h1>登録情報</h1>
  <%= link_to "編集", edit_customer_path(@customer.id) %>
  <h1>氏名：<%= @customer.last_name + @customer.first_name %></h1>
  <h1>フリガナ：<%= @customer.last_name_kana + @customer.first_name_kana %></h1>
  <h1>郵便番号：<%= @customer.postal_code %></h1>
  <h1>住所：<%= @customer.address %></h1>
  <h1>電話番号：<%= @customer.telephone_number %></h1>
  <h1>メールアドレス：<%= @customer.email %></h1>
  <% if customer_signed_in? %>
  <li>
      <%= link_to 'ture', destroy_customer_session_path, method: :delete %>   
  </li>
  <% end %>
  <h2>注文履歴：<%= link_to '一覧を見る', orders_path %> </h2>
</div>
